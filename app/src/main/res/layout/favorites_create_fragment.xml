<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:fillViewport="true">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">


        <TextView
            android:id="@+id/tv_favorites_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Добавить в избранное"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/classic_brown"
            android:layout_marginBottom="24dp" />


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/selected_tea_image"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_tea_placeholder"
                    android:contentDescription="Изображение чая"
                    android:layout_marginEnd="16dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/selected_tea_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Выберите чай"
                        android:textColor="@color/dark_brown"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <Button
                        android:id="@+id/btn_choose_tea"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Выбрать чай"
                        style="?attr/borderlessButtonStyle"
                        android:textColor="@color/classic_brown" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Название заметки или чая:"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"
            android:textColor="@color/darker_brown"/>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/MyTextInputLayoutStyle"
            android:id="@+id/til_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:boxStrokeColor="@color/classic_brown"
            app:hintEnabled="false">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/tea_name_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Название чая"
                android:imeOptions="actionNext" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Описание:"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"
            android:textColor="@color/darker_brown"/>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/MyTextInputLayoutStyle"
            app:boxStrokeColor="@color/classic_brown"
            android:id="@+id/til_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:hintEnabled="false">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/tea_description_input"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:gravity="top|start"
                android:hint="Напишите ваши заметки"
                android:inputType="textMultiLine"
                android:minLines="3" />

        </com.google.android.material.textfield.TextInputLayout>


        <Button
            android:id="@+id/btn_save_favorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Сохранить в избранное"
            android:textSize="16sp"
            style="?attr/materialButtonOutlinedStyle"
            android:textColor="@color/classic_brown"/>

    </LinearLayout>

</ScrollView>